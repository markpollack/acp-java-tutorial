<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Enable DEBUG for ACP SDK -->
    <logger name="com.agentclientprotocol" level="DEBUG"/>

    <!-- Enable TRACE for transport to see raw messages -->
    <logger name="com.agentclientprotocol.sdk.client.transport" level="TRACE"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
